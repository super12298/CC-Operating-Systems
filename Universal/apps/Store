osname ="Project Secure"


function pnt_menu()
term.clear()
if term.isColor() then
term.setBackgroundColor( colors.blue )
term.setTextColor( colors.white )
else
--stuff for black and white
end
BFS.tpla(1,1,"["..osname.."'s Appstore]:")
sleep(.5)
end
function loadscrn()
print("Splash...OK")
sleep(.5)
term.clear()
BFS.dg("/OS/Data/Store/images/splash",.5)
end
pnt_menu()
loadscrn()
